# VoiceClaw Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Clawdbot/OpenClaw Gateway (Primary Mode)
# =============================================================================

# Enable Clawdbot integration (true = use Clawdbot, false = direct LLM API)
USE_CLAWDBOT=true

# Gateway URL (default: local Clawdbot)
CLAWDBOT_GATEWAY_URL=http://127.0.0.1:18789

# Gateway auth token (from your Clawdbot config)
CLAWDBOT_GATEWAY_TOKEN=your_gateway_token_here

# Agent ID to route to (default: main)
CLAWDBOT_AGENT_ID=main

# Session key for continuity with Telegram/WhatsApp (optional)
# Leave empty for independent voice sessions
# Set to your main session key for shared context
CLAWDBOT_SESSION_KEY=

# =============================================================================
# Direct LLM API (Fallback when USE_CLAWDBOT=false)
# =============================================================================

# LLM API endpoint (OpenAI-compatible)
LLM_API_ENDPOINT=http://127.0.0.1:1234/v1/chat/completions

# API key for direct LLM access
LLM_API_KEY=

# =============================================================================
# Text-to-Speech
# =============================================================================

# TTS API endpoint (OpenAI-compatible)
TTS_API_ENDPOINT=http://localhost:5005/v1/audio/speech

# TTS model and voice
TTS_MODEL=tts-1
TTS_VOICE=tara
TTS_FORMAT=wav

# =============================================================================
# Speech-to-Text (Whisper)
# =============================================================================

# Whisper model size (tiny.en, base.en, small.en, medium.en, large)
# Smaller = faster, larger = more accurate
WHISPER_MODEL=base.en

# =============================================================================
# Server Configuration
# =============================================================================

# WebSocket server binding
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8000

# =============================================================================
# Audio Processing
# =============================================================================

# Voice Activity Detection threshold (0.0-1.0)
VAD_THRESHOLD=0.5

# VAD buffer size
VAD_BUFFER_SIZE=30

# Audio sample rate
AUDIO_SAMPLE_RATE=48000
